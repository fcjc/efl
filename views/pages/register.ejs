<html>
 <head>
  <% include ../partials/head.ejs %>
 </head>
 <body>
  <div class="reg_page">
   <div class="heading">EFL 2018 Registration page</div>
   <div class="heading"><%= errmsg %></div>
   <form action="/" method="post" onsubmit="return confirm('Have you entered everything in correctly?')">
    <ul class="form_page_ul">
     <li>
      <label>Team:</label>
      <select name="shortName">
       <% for (var i = 0; i < teams.length; i++) { %>
        <% if (teams[i].password === 'temp') { %>
         <option value="<%= teams[i].shortName %>"><%= teams[i].name %></option>
       <% } } %>
      </select>
     </li>
     <li>
      <label>Login:</label>
      <input type="text" name="login">
     </li>
     <li>
      <label>Password:</label>
      <input type="password" name="password">
     </li>
     <li>
      <label>Retype Password:</label>
      <input type="password" name="password2">
     </li>
     <li>
      <input type="submit" name="submit" value="Register">
     </li>
    </ul>
   </form>
  </div>
 </body>
</html>
