<html>
 <head>
  <% include ../partials/head.ejs %>
 </head>
 <body>
  <h1>EFL 2018 Nomination page</h1>
  <form name="nominate_form" action="/nominate.html" method="post" onsubmit="return validateForm()">
   <input name="team" type="hidden" value="<%= teamShort %>">
  <span class="formlabel">Pos:</span>
  <select name="pos">
   <option value="C">C</option>
   <option value="1B">1B</option>
   <option value="2B">2B</option>
   <option value="3B">3B</option>
   <option value="SS">SS</option>
   <option value="OF">OF</option>
   <option value="DH">DH</option>
   <option value="P">P</option>
  </select>
  
  <span class="formlabel">Secondary Postion:</span>
  <select name="posSec">
   <option value="">-</option>
   <option value="C">C</option>
   <option value="1B">1B</option>
   <option value="2B">2B</option>
   <option value="3B">3B</option>
   <option value="SS">SS</option>
   <option value="OF">OF</option>
  </select>
  <span class="formlabel">First Name:</span>
  <input type="text" name="firstName">
  <span class="formlabel">Last Name:</span>
  <input type="text" name="lastName">
  <span class="formlabel">Bid:</span>
  <input type="number" name="bid">
  <input type="submit" name="submit" value="Nominate">
  </form>

  <script type="text/javascript">
   function validateForm() {
    var a=document.forms["nominate_form"]["firstName"].value;
    var b=document.forms["nominate_form"]["lastName"].value;
    var c=document.forms["nominate_form"]["bid"].value;
    if (a==null || a=="" || b==null || b=="") {
     alert("Name is blank, please try again");
     return false;
    }
    if (c < 1) {
     alert("Bid cannot be 0");
     return false;
    }
   }
  </script>
 </body>
</html>
